{
    "compilerOptions": {
      "target": "ESNext",
      "lib": [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
      "jsx": "react",
      "module": "ESNext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
    },
    "include": [
      "src",
    ]
  }